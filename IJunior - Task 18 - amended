using System;
using System.Collections.Generic;
using System.IO;
using System.Linq;
using System.Linq.Expressions;
using System.Net.Http.Headers;
using System.Runtime.CompilerServices;
using System.Security.Cryptography;
using System.Text;
using System.Threading.Tasks;

namespace CSTest1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string bracket1 = "(";
            string bracket2 = ")";
            string text;
            int bracketsCount = 0;
            int depth = 1;

            Console.Write("Введите скобочное выражение:");
            text = Console.ReadLine();

            if (text.StartsWith(bracket1) == false || text.EndsWith(bracket2) == false)
            {
                Console.WriteLine();
                Console.WriteLine("Указанное скобочное выражение неверное!");
                goto End;
            }

            foreach (var character in text)
            {
                if (character == Convert.ToChar(bracket1)) 
                {
                    bracketsCount++;
                }
                
                else if (character == Convert.ToChar(bracket2))
                {
                    bracketsCount--;
                }

                if (bracketsCount < 0) 
                {
                    Console.WriteLine();
                    Console.WriteLine("Указанное скобочное выражение неверное!");
                    goto End;
                }
            }

            if (bracketsCount != 0) 
            {
                Console.WriteLine();
                Console.WriteLine("Указанное скобочное выражение неверное!");
                goto End;
            }

            for (int i = 0; i < text.Length-1; i++)
            {
                 if (text.Substring(i, 1) == bracket1 && text.Substring(i + 1, 1) == bracket1)
                {
                    depth++;
                }
            }          
              
            Console.WriteLine();
            Console.WriteLine("Указанное скобочное выражение верно!");
            Console.WriteLine($"Его максимальная глубина составляет {depth}.");
                
            End:
            Console.ReadKey();
        }
    }
}
