using System;
using System.Collections.Generic;
using System.Linq;
using System.Linq.Expressions;
using System.Runtime.CompilerServices;
using System.Text;
using System.Threading.Tasks;

namespace CSTest1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string name;
            char character;
            int nameLength;
            int startLine = 3;
            int StartColumn = 0;

            Console.Write("Введите любое имя:");
            name = Console.ReadLine();
            Console.Write("Укажите любой символ:");
            character = Convert.ToChar(Console.ReadLine());
            nameLength = name.Length;
            Console.WriteLine();
            Console.SetCursorPosition(StartColumn, startLine + 1);
            Console.Write(character + name + character);

            for (int i = StartColumn; i < nameLength + 2; i++)
            {
                Console.SetCursorPosition(i, startLine);
                Console.Write(character);
                Console.SetCursorPosition(i, startLine+2);
                Console.Write(character);
            }

            Console.ReadKey();          
        }
    }
}
