using System;
using System.Collections.Generic;
using System.Linq;
using System.Linq.Expressions;
using System.Runtime.CompilerServices;
using System.Text;
using System.Threading.Tasks;

namespace CSTest1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string name;
            char character;
            string mainText;
            int mainTextLength;
            int startLine = 3;
            int startColumn = 0;

            Console.Write("Введите любое имя:");
            name = Console.ReadLine();
            Console.Write("Укажите любой символ:");
            character = Convert.ToChar(Console.ReadLine());
            mainText = $"{character}{name}{character}";
            mainTextLength = mainText.Length;
            Console.WriteLine();
            Console.SetCursorPosition(startColumn, startLine + 1);
            Console.Write(mainText);

            for (int i = startColumn; i < mainTextLength; i++)
            {
                Console.SetCursorPosition(i, startLine);
                Console.Write(character);
                Console.SetCursorPosition(i, startLine + 2);
                Console.Write(character);
            }

            Console.ReadKey();          
        }
    }
}
