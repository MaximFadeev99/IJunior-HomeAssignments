using System;
using System.Collections.Generic;
using System.Linq;
using System.Linq.Expressions;
using System.Text;
using System.Threading.Tasks;

namespace CSTest1
{
    internal class Program
    {
        static void Main(string[] args)
        {
          Random random = new random;
          int maxRandomNumber = 100;
          int[,] array = int[10,10];
          int maxNumber = int.MinValue;
          int maxNumberRow = 0;
          int maxNumberColumn = 0;
          
          for (int i = 0; i <= array.GetLength(0))
          {
            
            for (int j = 0; j <= array.GetLength(1))
            {
                array[i,j] = random.Next(100);
                Console.Write(array[i,j] + " ");
            }
            
            Console.WriteLine();
          }
          
          for each (var number in array)
          {
              if (nunmber > MaxNumber)
              {
                MaxNumber = number;
              }
          }
          
          for each (var number in array)
          {
              if (nunmber = MaxNumber)
              {
                number = 0;
              }
          }
          
          for (int i = 0; i <= array.GetLength(0))
          {
            
            for (int j = 0; j <= array.GetLength(1))
            {
                Console.Write(array[i,j] + " ");
            }
            
            Console.WriteLine();
          }
          
          Console.WriteLine();
          Console.WriteLine($"Максимальное число в матрице было {MaxNumber}. Оно заменено на 0");
          
        }
    }
}
