using System;
using System.Collections.Generic;
using System.Linq;
using System.Linq.Expressions;
using System.Runtime.CompilerServices;
using System.Security.Cryptography;
using System.Text;
using System.Threading.Tasks;

namespace CSTest1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            int minNumber = 1;
            int maxNumber = 27;
            int randomNumber = random.Next(minNumber, maxNumber + 1);
            int numbersCount = 0;
            int targetNumber = randomNumber;
            int maxTargetNumberLength = 3;

            Console.WriteLine($"Рандомно сгенерированное числов в пределах от {minNumber} до {maxNumber} (включительно): {randomNumber}");
            Console.WriteLine();
            Console.WriteLine($"Список трехзначных чисел, кратных {randomNumber}:");

            while(Convert.ToString(targetNumber).Length <= maxTargetNumberLength)
            {
                targetNumber += randomNumber;

                if (Convert.ToString(targetNumber).Length == 3)
                {
                    Console.WriteLine(targetNumber);
                    numbersCount++;
                }
            }

            Console.WriteLine();
            Console.WriteLine($"Количество чисел из списка выше: {numbersCount}");
            Console.ReadKey();
        }
    }
}
