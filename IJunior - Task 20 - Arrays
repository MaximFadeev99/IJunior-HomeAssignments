using System;
using System.Collections.Generic;
using System.Linq;
using System.Linq.Expressions;
using System.Text;
using System.Threading.Tasks;

namespace CSTest1
{
    internal class Program
    {
        static void Main(string[] args)
        {
          Random random = new Random();
            int [,] numbers = new int [2, 2];
            int maxNumber = 100;
            int targetRowIndex = 1;
            int targetColumnIndex = 0;
            int targetRowSum = 0;
            int targetColumnProduction = 1;

            for (int i = 0; i < numbers.GetLength(0); i++)
            {
                for (int j = 0; j < numbers.GetLength(1); j++)
                {
                    numbers[i, j] = random.Next(maxNumber);
                    Console.Write(numbers[i, j] + " ");
                }

                Console.WriteLine();
            }

            for (int i = 0; i < numbers.GetLength(0); i++)
            {
                targetRowSum += numbers[targetRowIndex, i];
            }

            for (int i = 0; i < numbers.GetLength(1); i++)
            {
                targetColumnProduction *= numbers[i, targetColumnIndex];
            }

            Console.WriteLine();
            Console.WriteLine($"Сумма чисел {targetRowIndex+1} строки равняется {targetRowSum}.");
            Console.WriteLine($"Произведение чисел {targetColumnIndex+1} строки равняется {targetColumnProduction}.");
            Console.ReadKey();
        }
    }
}
