using System;
using System.Collections.Generic;
using System.Linq;

namespace CSTest2
{
    internal class Program
    {
        static void Main(string[] args)
        {
            List<Soldier> squad1 = new List<Soldier>() 
            {
                new Soldier("Борисенко Дмитрий Иванович"),
                new Soldier("Приходько Петр Васильевич"),
                new Soldier("Борисов Сергей Сергеевич"),
                new Soldier("Матвеев Николай Иванович"),
                new Soldier("Бортников Никита Петрович")
            };
            List<Soldier> squad2 = new List<Soldier>() 
            {
                new Soldier("Антипов Григорий Сергеевич"),
                new Soldier("Степаненко Кирилл Макарович"),
            };

            Console.WriteLine("Отряд 1 до переформирования:");
            ShowSoldiers(squad1);
            Console.WriteLine("\nОтряд 2 после переформирования:");
            List<Soldier> extendedSquad = squad2.Union(from soldier in squad1 where soldier.Name.StartsWith("Б") select soldier).ToList();
            ShowSoldiers(extendedSquad);
            Console.WriteLine("\nОтряд 1 после переформирования:");
            squad1 = squad1.Except(extendedSquad).ToList();
            ShowSoldiers(squad1);
            Console.ReadKey();            
        }

        static void ShowSoldiers(List<Soldier> soldiers) 
        {
            foreach (var soldier in soldiers)
            {
                Console.WriteLine(soldier.Name);
            }
        }
    }

    class Soldier 
    {
        public Soldier(string name) 
        {
            Name = name;    
        }

        public string Name { get; private set; }
    }
}
