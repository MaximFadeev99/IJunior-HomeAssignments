using System;
using System.Collections.Generic;
using System.IO;
using System.Linq;
using System.Linq.Expressions;
using System.Net.Http.Headers;
using System.Runtime.CompilerServices;
using System.Security.Cryptography;
using System.Text;
using System.Threading.Tasks;

namespace CSTest1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string bracketOpen = "(";
            string bracketClose = ")";
            string text;
            int bracketsCount = 0;
            int depth = 0;

            Console.Write("Введите скобочное выражение:");
            text = Console.ReadLine();

            foreach (var character in text)
            {
                if (character == Convert.ToChar(bracketOpen)) 
                {
                    bracketsCount++;
                    
                    if (depth < bracketsCount)
                    {
                       depth++; 
                    }
                    
                }                
                else if (character == Convert.ToChar(bracketClose))
                {
                    bracketsCount--;
                }

                if (bracketsCount < 0) 
                {
                    Console.WriteLine();
                    Console.WriteLine("Указанное скобочное выражение неверное!");
                    goto End;
                }
            }

            if (bracketsCount != 0) 
            {
                Console.WriteLine();
                Console.WriteLine("Указанное скобочное выражение неверное!");
                goto End;
            }        
              
            Console.WriteLine();
            Console.WriteLine("Указанное скобочное выражение верно!");
            Console.WriteLine($"Его максимальная глубина составляет {depth}.");
                
            End:
            Console.ReadKey();
        }
    }
}
