using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSTest1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            //задача 3
          string name = "Алексей";
          byte age = 21; 
          string zodiacSign = "водолей";
          string workingPlace = "завод";
          string result1 = "Вас зовут " + name + ", вам " + age + " год, вы " + zodiacSign + " и работаете на " + workingPlace + "е.";
          string result2 = $"Вас зовут {name}, вам {21} год, вы {zodiacSign} и работаете на {workingPlace}e."
          console.writeline (result1);
          console.writeline (result2); 
          console.readkey();
        }
    }
}
