using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSTest1
{
    internal class Program
    {
        static void Main(string[] args)
        {        
            string name;
            int age;
            string zodiacSign;
            string workingPlace;
            Console.Write("Как Вас зовут:");
            name = Console.ReadLine();
            Console.Write("Сколько Вам лет:");
            age = Convert.ToInt32(Console.ReadLine());
            Console.Write("Какой Ваш зодиака:");
            zodiacSign = Console.ReadLine();
            Console.Write("Ваше место работы:");
            workingPlace = Console.ReadLine();
            string result1 = "Вас зовут " + name + ", вам " + age + " год, вы " + zodiacSign +
                " и работаете на " + workingPlace + "е.";
            string result2 = $"Вас зовут {name}, вам {age} год, вы {zodiacSign} и работаете на {workingPlace}e.";
            Console.WriteLine(result1);
            Console.WriteLine(result2);
            Console.ReadKey();
        }
    }
}
