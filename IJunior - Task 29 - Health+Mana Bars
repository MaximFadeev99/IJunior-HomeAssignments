using System;

namespace CSTest2
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int currentHealth = 4;
            int maxHealth = 10;
            int healthbarPosition = 1;
            int currentMana = 6;
            int maxMana = 10;
            int manabarPosition = 4;

            DrawBar(currentHealth, maxHealth, ConsoleColor.Red, healthbarPosition);
            DrawBar(currentMana, maxMana, ConsoleColor.Blue, manabarPosition);
            Console.ReadKey();
        }

        static void DrawBar(int value, int maxValue, ConsoleColor color, int position)
        {
            string bar = "";
            char startSymbol = '[';
            char endSymbol = ']';
            char mainSymbol = '#';
            char emptySpaceSymbol = '_';
            ConsoleColor defaultColor = Console.BackgroundColor;

            Console.SetCursorPosition(0, position);
            Console.Write(startSymbol);
            Console.BackgroundColor = color;
            bar = FillBar(bar, 0, value, mainSymbol);
            Console.Write(bar);
            Console.BackgroundColor = defaultColor;
            bar = "";
            bar = FillBar(bar, value, maxValue, emptySpaceSymbol);
            Console.Write(bar + endSymbol);
        }

        static string FillBar(string bar, int startValue, int endValue, char filler) 
        {
            for (int i = startValue; i < endValue; i++) 
            {
                bar += filler; 
            }
            return bar;
        }
    }
}
