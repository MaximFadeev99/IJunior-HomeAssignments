using System;
using System.Collections.Generic;
using System.Linq;
using System.Linq.Expressions;
using System.Text;
using System.Threading.Tasks;

namespace CSTest1
{
    internal class Program
    {
        static void Main(string[] args)
        {
          Random randon = new Random();
          int maxNumber = 100;
          int arrayLength = 10;
          int[] randomNumbers = new int [arrayLength];
          int[] orderedRandomNumbers = new int [0];
          int[] tempOrderedRandomNumbers = new int [arrayLength];
          int checkNumber;
          
          Сonsole.Write("Список рандомных чисел до сортировки:")
          for (int i = 0; i < arrayLength; i++)
          {
            randomNumbers[i] = random.Next(maxNumber);
            tempOrderedRandomNumbers[i] =  randomNumbers[i];
            Console.Write(randomNumbers[i] + " ");
          }
          
          Console.WriteLine("Нажмите любую клавишу, чтобы отсортировать цифры от меньшего к большему...");
          Console.WriteLine();
          Console.Write("Список отсортированных чисел:");        
          
          while (orderedRandomNumbers.Length < arrayLength)
          {
            for (int i = 0; i < arrayLength-1; i++)
            {
            
                if (tempOrderedRandomNumbers[i] > tempOrderedRandomNumbers[i+1])
                {
                  checkNumber = tempOrderedRandomNumbers[i+1];
                }
            }
            
            orderedRandomNumbers[orderedRandomNumbers.Length-1] = checkNumber;
            Console.Write(orderedRandomNumbers.Length-1 + " ");
            int[] tempOrderedRandomNumbers2 = new int [tempOrderedRandomNumbers.Length-1];
            
            for (int i = 0; i < arrayLength; i++)
            {
                if (tempOrderedRandomNumbers[i] != orderedRandomNumbers[orderedRandomNumbers.Length-1])
                {
                    tempOrderedRandomNumbers2[i] = tempOrderedRandomNumbers[i];
                }
            }
            
            tempOrderedRandomNumbers = tempOrderedRandomNumbers2;            
          }
 
            Console.ReadKey();
        }
    }
}
