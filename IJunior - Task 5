using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSTest1
{
    internal class Program
    {
        static void Main(string[] args)
        {        
            string surname = "Илья";
            string name = "Петров";
            string tempVariable;

            Console.WriteLine($"Введенная фамилия: {surname}");
            Console.WriteLine($"Введенное имя: {name}");
            Console.WriteLine();
            Console.WriteLine("Нажмите любую клавишу для смены данных");
            Console.ReadKey();
            Console.WriteLine();
            tempVariable = surname;
            surname = name;
            name= tempVariable;
            Console.WriteLine($"Исправленная фамилия: {surname}");
            Console.WriteLine($"Исправленное имя: {name}");
            Console.ReadKey();
        }
    }
}
