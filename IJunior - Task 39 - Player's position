using System;


namespace CSTest2
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Player user1 = new Player (20,10);
            Console.CursorVisible = false;

            user1.DrawPlayer(user1.X,user1.Y);
            Console.ReadKey();
        }
            
        class Player 
        {
            private int _x;
            private int _y;

            public Player(int x, int y) 
            {
                _x = x;
                _y = y;                
            }

            public int X { get => _x; }
            public int Y { get => _y; }

            public void DrawPlayer (int x, int y, char playerSymbol = '@') 
            {
                Console.SetCursorPosition (x, y);
                Console.WriteLine(playerSymbol);            
            }       
        }
    }
}
