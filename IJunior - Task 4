using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSTest1
{
    internal class Program
    {
        static void Main(string[] args)
        {        
          int picturesCount = 52;
          int picturesInRow = 3;
          int completeRows = picturesCount / picturesInRow;
          int picturesLeft = picturesCount % picturesInRow;
          console.writeline ($"Число полностью заполненных строк - {completeRows}");
          console.writeline ($"Число излишних картинок - {picturesLeft}");
          console.readkey()
        }
    }
}
