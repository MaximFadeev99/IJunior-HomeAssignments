using System;
using System.Collections.Generic;
using System.Linq;
using System.Linq.Expressions;
using System.Text;
using System.Threading.Tasks;

namespace CSTest1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            int minNumber = 1;
            int maxNumber = 3;
            int[] randomNumbers = new int[30];
            int possibleMaxIterationsNumber;
            int possibleMaxIterationsNumberCount = 0;
            int maxIterationsNumber = 0;
            int maxIterationsNumberCount = 0;
            int maxIterationsDoubleCheck = 0;

            for (int i = 0; i < randomNumbers.Length; i++)
            {
                randomNumbers[i] = random.Next(minNumber, maxNumber);
                Console.Write(randomNumbers[i] + " ");
            }

            for (int i = 1; i < randomNumbers.Length; i++)
            {
                if (randomNumbers[i] != randomNumbers[i-1])
                {
                    possibleMaxIterationsNumberCount = 0;
                    possibleMaxIterationsNumber = randomNumbers[i];
                    possibleMaxIterationsNumberCount++;
                }
                else 
                {
                    possibleMaxIterationsNumber = randomNumbers[i];
                    possibleMaxIterationsNumberCount++;
                }

                if (possibleMaxIterationsNumberCount > maxIterationsNumberCount) 
                {
                    maxIterationsNumber = possibleMaxIterationsNumber;
                    maxIterationsNumberCount = possibleMaxIterationsNumberCount;
                }
            }

            for (int i = 0; i <= maxIterationsNumberCount; i++) 
            {
                if (randomNumbers[i] == maxIterationsNumber)
                {
                    maxIterationsDoubleCheck++;
                }
                else 
                {
                    maxIterationsDoubleCheck = maxIterationsNumberCount;
                    break;
                }
            }

            Console.WriteLine();
            Console.WriteLine($"Наиболее часто повторившееся число - {maxIterationsNumber}.");
            Console.WriteLine($"Данное число повторилось подряд {maxIterationsDoubleCheck} раз(а).");
            Console.ReadKey();
        }
    }
}
