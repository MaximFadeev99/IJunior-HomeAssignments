using System;
using System.Collections.Generic;
using System.Linq;
using System.Linq.Expressions;
using System.Text;
using System.Threading.Tasks;

namespace CSTest1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            int randomNumber;
            int minNumber = 0;
            int maxNumber = 100;
            double sum = 0;
            int firstDivisor = 3;
            int secondDivisor = 5;
            
            randomNumber = random.Next(maxNumber+1);
            Console.WriteLine($"Рандомно сгенерированное число:{randomNumber}");
            Console.WriteLine($"Список чисел, которые кратны {firstDivisor} или {secondDivisor} и которые находятся в диапазоне от {minNumber} до {maxNumber}:");

            for (double i = minNumber; i <= randomNumber; i++)
            {
                if (i / firstDivisor == Convert.ToInt32(i/firstDivisor) || i / secondDivisor == Convert.ToInt32(i / secondDivisor))
                {
                    Console.WriteLine(i);
                    sum += i;
                }
            }

            Console.WriteLine();
            Console.WriteLine($"Сумма чисел, кратных {firstDivisor} или {secondDivisor}, находящихся в указанном диапазоне, равняется {sum}.");
            Console.ReadKey();
        }
    }
}
