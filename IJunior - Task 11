using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSTest1
{
    internal class Program
    {
        static void Main(string[] args)
        {       
            Random rand = new Random();
            int startingNumber = 0;
            int lastNumber = rand.Next(0, 101);
            double sumCumulation = 0;

            Console.WriteLine($"Рандомно сгенерированное число:{lastNumber}");
            Console.WriteLine($"Список чисел, которые кратны 3 или 5 и которые находятся в диапазоне от {startingNumber} до {lastNumber}:");
            
            for(double i = startingNumber; i <= lastNumber; i++)
            {
                if (i / 3 == Math.Round(i / 3, 0) || i / 5 == Math.Round(i / 5, 0))
                {
                    Console.WriteLine(i);
                    sumCumulation += i;
                }
            }
            
            Console.WriteLine();
            Console.WriteLine($"Сумма чисел, кратных 3 или 5, находящихся в указанном диапазоне, равняется {sumCumulation}.");
            Console.ReadKey(); 
        }
    }
}
