using System;

namespace CSTest1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            int[] numbers = new int[10];
            int maxNumber = 100;

            for (int i = 0; i < numbers.Length; i++)
            {
              numbers[i] = random.Next(maxNumber);
            }

            Console.Write("Изначальный массив:");
            ShowArray(numbers, 0, 1);
            Shuffle(ref numbers);         
            Console.SetCursorPosition(25, 0);
            Console.Write("Измененный массив:");
            ShowArray(numbers, 25, 1);
            Console.ReadKey();
        }

        static void Shuffle(ref int[] originalArray)
        {
            Random random = new Random();
            int transferNumberPosition;
            int transferNumber;

            for (int shuffleBorder = originalArray.Length - 1; shuffleBorder >= 0; shuffleBorder--) 
            {
                transferNumberPosition = random.Next(0, shuffleBorder);
                transferNumber = originalArray[transferNumberPosition];

                for (int i = transferNumberPosition + 1; i <= shuffleBorder; i++) 
                {
                    originalArray[i-1] = originalArray[i];
                }

                originalArray[shuffleBorder] = transferNumber;
            }
        }

        static void ShowArray (int[] depictedArray, int cursorPositionX, int cursorPositionY)
        {
            Console.SetCursorPosition(cursorPositionX, cursorPositionY);

            for (int i = 0; i < depictedArray.Length; i++)
            {
                Console.Write(i + 1 + ") " + depictedArray[i]);
                Console.SetCursorPosition(cursorPositionX, cursorPositionY + i + 1);
            }
        }
    }
}
